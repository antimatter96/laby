<html>
	<head>
		{{ headers1.head("Register", "") }}
	</head>
	<body>
			<section id="banner">
				<header class="image">
					<img id="logo" src="static/logo.png">
					<h2>Labyrinthos</h2>
				</header>
			</section>
			
			<article id="register" class="container box style3">
				<header>
					<h2>Register</h2>
				</header>
				<form method="post" action="/register">
					<div class="row 50%">
						<input type="hidden" name="_csrf" value="{{csrfToken}}">
						<div class="6u 12u$(mobile)">
							<label>User Name</label>
							<input type="text" name="username" placeholder="An awesome username" required/>
						</div>
						<div class="6u 12u$(mobile)">
							<label>Password</label>
							<input type="password" name="password" placeholder="Password" required/>
						</div>
						{% if signupError %}
							<div class="12u$ 12u$(mobile) centered is-error">
								{{signupError}}
							</div>
						{% endif %}
						<div class="12u$">
							<ul class="actions">
								<li><input type="submit" value="Register"></li>
							</ul>
						</div>
					</div>
				</form>
			</article>

			{% include "_footer.njk" %}
			{% include "_counter.njk" %}
	</body>
</html>
